{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "flowtype-errors",
    "flowtype",
    "import"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__STANDALONE__": false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false,
    "__BACKEND_URL__" : false,
    "__PACKAGE__": false,
    "__webpack_public_path__": true,
    "it": false,
    "expect": false,
    "describe": false,
    "sinon": false,
    "before": false,
    "beforeEach": false,
    "Generator": true
  },
  "rules": {
    "key-spacing" : 0,
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "no-var": "error",
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "space-before-function-paren": [2, "never"],
    "operator-linebreak": [2, "before"],
    "generator-star-spacing": [2, {"before": false, "after": true}],

    "react/jsx-space-before-closing": [2, "never"],
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-no-bind": [2, { "allowArrowFunctions": true, "allowBind": true }],

    "flowtype-errors/show-errors": 2,

    // "no-duplicate-imports" rule does not support importing types ("import type ...") and
    // regular values from the same module. Therefore, we have to use "import/no-duplicates",
    // until "no-duplicate-imports" is fixed.
    //
    // https://github.com/benmosher/eslint-plugin-import/blob/master/docs/rules/no-duplicates.md
    "no-duplicate-imports": 0,
    "import/no-duplicates": 2
  }
}
